<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TastyTales.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TastyTales"
    Shell.FlyoutBehavior="Flyout"
    Title="TastyTales">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:Views.HomePage}"
        Route="HomePage" />

    <ShellContent
        Title="Search Recipe"
        ContentTemplate="{DataTemplate local:Views.SearchPage}"
        Route="SearchPage" />
    <ShellContent
     Title="Categories"
     ContentTemplate="{DataTemplate local:Views.CategoriesPageUI}"
     Route="CategoriesPageUI" />

    <ShellContent
     Title="Favorites"
     ContentTemplate="{DataTemplate local:Views.Favorites}"
     Route="Favorites" />

</Shell>